<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <div>
        <ul>
            <% if(typeof err != 'undefined'){ %> <% err.forEach(function(error) { %>
                <li><%= error %></li>
            <% }); %> <% } %>
        </ul>
    </div>
    <form action="" method="POST">
        <div>
            <input type="text" name="name" id="name" placeholder="username" value="<%= typeof name != 'undefined' ? name : '' %>">
        </div>
        <div>
            <input type="text" name="password" id="password" placeholder="password" value="<%= typeof password != 'undefined' ? password : '' %>">
        </div>
        <div>
            <input type="submit" value="submit">
        </div>
        <a href="/register">Register</a>
    </form>
</body>
</html>